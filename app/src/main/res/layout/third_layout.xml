<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/bE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_red_light"
        android:text="REQUEST"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bDD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bDL"
        android:layout_alignStart="@+id/bDL"
        android:layout_below="@+id/bDL"
        android:layout_marginTop="29dp"
        android:background="@android:color/holo_red_light"
        android:text="REQUEST"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/bDL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bE"
        android:layout_alignStart="@+id/bE"
        android:layout_below="@+id/bE"

        android:layout_marginTop="29dp"
        android:background="@android:color/holo_red_light"
        android:text="JOIN"
        android:textColor="@android:color/background_light" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:visibility="visible"
        app:srcCompat="@drawable/commm"
        android:layout_below="@+id/bDD"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Healthy food group"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="italic"
        android:layout_alignBaseline="@+id/bDD"
        android:layout_alignBottom="@+id/bDD"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bDL"
        android:layout_alignBottom="@+id/bDL"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/bDL"
        android:layout_toStartOf="@+id/bDL"
        android:fontFamily="sans-serif"
        android:text="Dia Life community"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bE"
        android:layout_alignBottom="@+id/bE"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@+id/bE"
        android:layout_toStartOf="@+id/bE"
        android:fontFamily="sans-serif"
        android:text="Dia fitness group"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="italic" />


</RelativeLayout>
