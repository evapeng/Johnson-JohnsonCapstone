<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView3"
        app:srcCompat="@drawable/comm" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:ems="10"
        android:hint="What's On Your Mind?"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:drawableBottom="?attr/colorBackgroundFloating"
        android:fontFamily="cursive"
        android:text="DiaLife"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:layout_toRightOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/bCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@+id/bShare"
        android:layout_toStartOf="@+id/bShare"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp" />

    <ImageButton
        android:id="@+id/bShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_share"
        android:layout_alignTop="@+id/bCamera"
        android:layout_toLeftOf="@+id/bVideo"
        android:layout_toStartOf="@+id/bVideo"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp" />

    <ImageButton
        android:id="@+id/bVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_slideshow"
        android:layout_alignTop="@+id/bShare"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />




</RelativeLayout>
