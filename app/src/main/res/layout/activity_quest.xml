            android:layout_alignLeft="@+id/t9" />

        <CheckBox
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:text="CheckBox"
            android:layout_below="@+id/t10"
            android:layout_alignStart="@+id/t10"
            android:layout_alignLeft="@+id/t10" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t11"
            android:layout_alignStart="@+id/t11"
            android:padding="20dp"
            android:background="#ff0000"
            android:textColor="#f7f7f7"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Start"
            android:layout_alignEnd="@+id/t11"
            android:layout_alignLeft="@+id/t11"
            android:layout_alignRight="@+id/t11" />

    </RelativeLayout>


</ScrollView>