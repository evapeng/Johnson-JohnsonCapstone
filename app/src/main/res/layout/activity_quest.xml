            android:layout_alignLeft="@+id/t6" />

        <CheckBox
            android:id="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="CheckBox"
            android:textColor="#ff0000"
            android:layout_below="@+id/t7"
            android:layout_alignStart="@+id/t7"
            android:layout_alignLeft="@+id/t7" />

        <CheckBox
            android:id="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="CheckBox"
            android:textColor="#ff0000"
            android:layout_below="@+id/t8"
            android:layout_alignStart="@+id/t8"
            android:layout_alignLeft="@+id/t8" />

        <CheckBox
            android:id="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:text="CheckBox"
            android:layout_below="@+id/t9"
